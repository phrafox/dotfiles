[colors]
#background = ${xrdb:color0:#222}
foreground = #eee
foreground-alt = ${xrdb:color7:#222}
primary = ${xrdb:color1:#222}
secondary = ${xrdb:color2:#222}
alert = ${xrdb:color3:#222}
background = #50000000 
[bar/topbar]
monitor = ${env:MONITOR} 
width = 100%
height = 35
radius = 0 
enable-ipc = true
underline-size = 2
underline-color = #eee
background = ${colors.background}
foreground = ${colors.foreground}
fixed-center = true

spacing = 1
padding-left = 0
padding-right = 0
module-margin-left = 0 
module-margin-right = 0

font-0 = "Product Sans:pixelsize=14;0"
font-1 = FontAwesome:size=14;1
offset-y = 20%

modules-left = i3 title
modules-center =
modules-right = music audio battery network vpn date powermenu 

[module/powermenu]
type = custom/menu
expand-right = true
format = <label-toggle> <menu>
format-padding = 3
menu-0-0 = 
menu-0-0-exec = poweroff
menu-0-1 =  
menu-0-1-exec = reboot
menu-0-0-padding = 3
menu-0-1-padding-left = 3


label-open = 
label-close = 
label-close-foreground = #f00

[module/music]
format-padding = 3
type = custom/script
exec = musstat
exec-if = playerctl metadata title
label-maxlen = 25
click-left = playerctl play-pause
click-right = playerctl position 20+
click-middle = i3-msg 'workspace music'
interval = 0

[module/weather]
type = custom/script
exec = /home/jan/Scripts/sh/weather.sh
tail = true

[module/vpn]
type = custom/script
format = %{O-3}%{F#f00}%{A1:gksudo pkill openvpn:}<label>%{A}
exec = echo '[VPN]'
exec-if = pgrep -x openvpn

[module/title]
type = internal/xwindow
format = <label>

label = %title:0:120:...%
label-padding = 4
label-maxlen = 15
label-empty = Empty

[module/battery]
format-discharging = <ramp-capacity> <label-discharging>
format-charging = <ramp-capacity> <label-charging>
format-discharging-padding = 3
format-chargin-padding = 3
ramp-capacity-font = 3
ramp-capacity-0 =  
ramp-capacity-1 =  
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

label-charging = %percentage%%
label-discharging = %percentage%%
type = internal/battery
full-at = 99
battery = BAT0
adapter = ADP1
poll-interval = 5

[module/date]
format =  <label>
format-background = #88000000
format-padding = 3

label = %date% %time%
type = internal/date

interval = 1.0

date = %a, %d %b 
time = %H:%M

date-alt = %A, %d %B %Y
time-alt = %H:%M:%S
[module/network]
format-connected =  <label-connected>
format-connected-padding = 3
label-connected = %essid%
label-connected-foreground = #eefafafa
label-disconnected =  disconnected 
label-disconnected-foreground = #cccccc

type = internal/network
interface = wlp2s0
interval = 3.0
ping-interval = 3
udspeed-minwidth = 5
accumulate-stats = true
unknown-as-up = true



[module/audio]
format-volume = <ramp-volume><label-volume>
format-volume-padding = 3
bar-volume-format = %fill%%indicator%%empty%
bar-volume-width = 10

bar-volume-gradient = true
bar-volume-foreground-0 = #43ff3d
bar-volume-foreground-1 = #ffff2d
bar-volume-foreground-2 = #ff0000

bar-volume-font = 1 

; The fill, indicator and empty icon can be configured like any <label>
bar-volume-fill = 
bar-volume-indicator =  
bar-volume-empty = 
bar-volume-padding = -100%

ramp-volume-0 =  
ramp-volume-1 = 
ramp-volume-2 = 

label-volume = %percentage%

	label-muted-padding = 3
label-muted =  %percentage%
label-muted-foreground = #8c8c8c
label-muted-background = #80000000

type = internal/pulseaudio
sink = alsa_output.pci-0000_12_00.3.analog-stereo
use-ui-max = true
interval = 5

[module/i3]
type = internal/i3

ws-icon-font = 4
ws-icon-0 = Browser;
ws-icon-1 = Term;
ws-icon-2 = Music;
ws-icon-3 = Text;
ws-icon-4 = Edit;
ws-icon-default = A 

format = <label-state> <label-mode>
format-padding-right = 3

label-visible = %icon%
label-visible-padding = 4

label-focused = %icon%
label-focused-background = #88000000
label-focused-underline= #ddd
label-focused-padding = 4

label-unfocused = %icon%
label-unfocused-padding = 4

label-occupied = %icon%
label-occupied-padding = 4

label-urgent = %icon%
label-urgent-padding = 4

label-empty = %icon%
label-empty-foreground = #44ffffff
label-empty-padding = 4

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

# vi:syntax=dosini

